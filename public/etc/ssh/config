# avira
host *.avira.com
	user tmerkel

host *.avira.net
	user tmerkel

# avira test network
host 10.90.101.*
	HashKnownHosts        no
	StrictHostKeyChecking no
	UserKnownHostsFile    /dev/null

# proxy setup
Host *+*
	ProxyCommand ssh $(echo %h | sed 's/+[^+]*$//;s/\([^+%%]*\)%%\([^+]*\)$/\2 -l \1/;s/:/ -p /') nc.traditional -w1 $(echo %h | sed 's/^.*+//;/:/!s/$/ %p/;s/:/ /')


Host hadoop-mgmt-01.tt.avira.com
  ProxyCommand none

Host *.bdo.tt.avira.com
  ProxyCommand ssh bdo@hadoop-mgmt-01.tt.avira.com nc %h %p

