# Thomas Merkel <tm@core.io>#

##
## homebrew
##
# source the bash completion plugin
source /usr/local/share/bash-completion/bash_completion

# set env PATH variable
export PATH=/usr/local/bin:/usr/local/sbin:/usr/local/opt/coreutils/libexec/gnubin:/usr/local/share/npm/bin:$PATH

# grc
GRC=$(which grc)
if [ "$TERM" != dumb ] && [ -n "$GRC" ]; then
	alias colourify="$GRC -es --colour=auto"
	alias configure='colourify ./configure'
	alias diff='colourify diff'
	alias make='colourify make'
	alias gcc='colourify gcc'
	alias g++='colourify g++'
	alias as='colourify as'
	alias gas='colourify gas'
	alias ld='colourify ld'
	alias netstat='colourify netstat'
	alias ping='colourify ping'
	alias traceroute='colourify /usr/sbin/traceroute'
fi

##
## some osx aliases
##
alias ls='ls --color=auto'
alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'
alias airport='sudo /System/Library/PrivateFrameworks/Apple80211.framework/Versions/Current/Resources/airport'

##
## python virtual environment
##
WORKON_HOME="${TM_HOME}/.virtualenvs"
source /usr/local/bin/virtualenvwrapper_lazy.sh

##
## use autojump for faster way to navigate your filesystem
##
[[ -s /usr/local/etc/autojump.sh ]] && source /usr/local/etc/autojump.sh

##
## java and ec2
##
export JAVA_HOME="$(/usr/libexec/java_home)"
export EC2_AMITOOL_HOME="/usr/local/Cellar/ec2-ami-tools/1.5.1/libexec"

##
## special commands
##
# dircolors exists only in brew repo, so run this command later
[[ -f ${HOME}/.dir_colors ]] && eval $(dircolors -b ${HOME}/.dir_colors)


# vim:ft=sh
