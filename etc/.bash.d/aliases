# Thomas Merkel <tm@core.io>

# ls and grep colors aliases
if [[ -x $(which dircolors 2>/dev/null) ]]; then
	alias ls='ls --color=auto'
	alias grep='grep --color=auto'
	alias fgrep='fgrep --color=auto'
	alias egrep='egrep --color=auto'
fi

# more ls aliases
alias l='ls -CF'
alias ll='ls -la'
alias la='ls -A'
alias lh='ls -l -h'
alias lt='ls -l -t'

# ..
alias ..='cd ..'
alias ...='cd ../..'

# sudo
alias Sl='sudo less +F /var/log/messages'
alias St='sudo top'
alias Sh='sudo htop'

# vim
alias vim='vim -u ${TM_HOME}/.vimrc'
alias vimdiff='vimdiff -u ${TM_HOME}/.vimrc'

# screen
alias screen='screen -c ${TM_HOME}/.screenrc'

# public inet address infos
alias pubip='dig +short myip.opendns.com @resolver1.opendns.com'

# ssh socket
alias sshsock='echo export $(env | grep SSH_AUTH_SOCK)'

# compile ssh config
alias compile-ssh-config='echo "# Warning this file is created by compile-ssh-config" > /Users/tm/.ssh/config && cat /Users/tm/.ssh.extra/config.!(*.secret) /Users/tm/.ssh/config.global >> ~/.ssh/config'

# history grep
alias h?='history | grep'

# easy sum via bc
# echo 1 2 3 | sum
alias sum='xargs | tr " " "+" | bc -l'

# virtualenv aliases
alias v='workon'
alias v.deactivate='deactivate'
alias v.mk='mkvirtualenv --no-site-packages'
alias v.mk_withsitepackages='mkvirtualenv'
alias v.rm='rmvirtualenv'
alias v.switch='workon'
alias v.add2virtualenv='add2virtualenv'
alias v.cdsitepackages='cdsitepackages'
alias v.cd='cdvirtualenv'
alias v.lssitepackages='lssitepackages'

# git
# workaround for ~/.gitconfig file after sudo
alias git='HOME=${TM_HOME} git'

# vim:ft=sh
